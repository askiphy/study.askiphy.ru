---
import FormattedDate from "./FormattedDate.astro";
interface Props {
    name: string;
    pubDate: Date;
    href: string;
    description: string;
}

const { name, pubDate, href, description } = Astro.props;
---
<li class="card">
    <div class="card__content">
        <div>
            {name}
            <p>
                {description}
            </p>
            <p>
                <FormattedDate date={pubDate} />
            </p>
        </div>
    </div>
    {href ? <a href={href}>
        <button class="card-button" style="width: 100%">Перейти</button>
    </a> : null}
</li>

<style>
    .card {
        margin: 1em;
        padding: 1em;
        border-radius: 35px;
        background-color: #302f2f;
        color: white;
        text-align: center;
        overflow: hidden;
        list-style: none;
        display: flex;
        flex-flow: column;
        border: solid 2px #ec7666;
    }

    .card h1,
    .card h2 {
        text-decoration: none;
    }

    .cardA {
        max-width: 100%;
        text-decoration: underline;
        color: white;
    }

    .cardA:hover {
        color: #ec7666;
        text-decoration: underline;
    }

    .card .logo {
        width: 100%;
        height: auto;
        border-radius: 35px;
        object-fit: cover;
    }

    p {
        margin-top: 0.5rem;
        margin-bottom: 0;
    }

    body {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        flex: 1 1 auto;
    }

    h2 {
        margin: 0;
        font-size: 1.25rem;
        transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
        text-align: center;
    }

    .card-button {
        font-family: inherit;

        color: black;
        background: white;

        font-weight: 600;

        padding: 10px;

        margin-top: 20px;

        border-radius: 35px;
        border: none;

        transition-property: color, background-color, border-color,
        text-decoration-color, fill, stroke;
        transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
        transition-duration: 150ms;

        cursor: pointer;

        &:active {
            background: #ec7666;
        }
    }

    @media (hover: hover) and (pointer: fine) {
        .card-button:hover {
            background: #ec7666;
        }
    }

    .card__content {
        flex: 1 1 auto;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }
</style>