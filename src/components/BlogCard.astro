---
import FormattedDate from "./FormattedDate.astro";
interface Props {
    title: string;
    body: Date;
    href: string;
    description: string;
}

const { href, title, body, description } = Astro.props;
---

<li class="card">
    <a href={href} class="cardA">
        <h2>
            {title}
        </h2>
        <p class="description">
            {description}
        </p>
        <p>
            <FormattedDate date={body} />
        </p>
    </a>
</li>
<style>
    .card {
        margin: 1em;
        padding: 1em;
        border-radius: 5px;
        background-color: #1c1c1c;
        color: white;
        overflow: hidden;
        list-style: none;
        display: flex;
        border: solid rgb(46, 154, 255) 1mm;
    }

    .card h1,
    .card h2 {
        text-decoration: none;
    }

    .cardA {
        max-width: 100%;
        text-decoration: none;
        color: white;
    }

    .card button {
        background-color: #222222;
        color: #fff;
        border: none;
        padding: 1em;
        border-radius: 1em;
        margin: 1em;
    }

    .card:hover {
        background-color: #3e3e3e;
        opacity: 0.8;
        transition: background-color 1000ms linear;
    }

    .card .logo {
        width: 100%;
        height: auto;
        border-radius: 7px;
    }

    p {
        margin-top: 0.5rem;
        margin-bottom: 0;
    }

    body {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        flex: 1 1 auto;
    }

    h2 {
        margin: 0;
        font-size: 1.25rem;
        transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    }

    .description {
        color: gray;
    }
</style>
